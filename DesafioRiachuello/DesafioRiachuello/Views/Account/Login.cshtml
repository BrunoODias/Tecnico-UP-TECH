@{
    Layout = "_Layout";
    ViewBag.Title = "Entrar";
}


<form method="post" asp-controller="Account" asp-action="Login" class="form m-auto col-sm-6">
    <div class="form-row my-2">
        <label for="UserName">Nome de usuário:</label>
        <input name="UserName" id="UserName" class="form-control form-control-sm">
    </div>
    <div class="form-row  my-2">
        <label for="Password">Senha:</label>
        <input name="Password" id="Password"  type="password" class="form-control form-control-sm">
    </div>
    <div class="form-row  my-2 justify-content-end">
        <button type="submit" class="btn btn-success">Entrar</button>
    </div>
    <p class="m-auto" style="width: fit-content;">
        Não possui uma conta? <a href="/Account/Register">Registrar</a>
    </p>
</form>